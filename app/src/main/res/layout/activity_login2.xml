<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.huangxiaoer.Login2Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y15">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:src="@drawable/user"
            android:layout_margin="@dimen/x5"/>

        <EditText
            android:id="@+id/et_login_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:background="@null"
            android:hint="请输入电话号码"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@id/relativeLayout"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="#c8c8c8"></View>

    <RelativeLayout
        android:id="@+id/relativeLayou1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_below="@+id/view"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x10">

        <ImageView
            android:id="@+id/iv_yzm"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:layout_margin="@dimen/x5"
            android:src="@drawable/yzm" />

        <EditText
            android:id="@+id/ed_login_yz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_yzm"
            android:layout_toLeftOf="@+id/iv_login_yzm"
            android:layout_toRightOf="@+id/iv_yzm"
            android:layout_toStartOf="@+id/iv_login_yzm"
            android:background="@null"
            android:hint="输入短信验证码"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_daojishi"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y15"
            android:text="29S后"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/daojishi"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/iv_xianshi"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y35"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/xianshi"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/iv_login_yzm"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y35"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hqyzm"
            android:visibility="visible"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@id/relativeLayou1"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="#c8c8c8"></View>



    <Button
        android:id="@+id/but_log"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y20"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x15"
        android:background="@drawable/login_but" />

    <TextView
        android:id="@+id/tv_logintype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_log"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y10"
        android:text="常规登录方式"
        android:textColor="#FFD200"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout2"
        android:text="其他登录方式"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y5"
        android:textColor="#999999" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/y10">

        <LinearLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_login_wx"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@drawable/weixin"
                android:layout_marginRight="@dimen/x10"
                />

            <ImageView
                android:id="@+id/iv_login_qq"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@drawable/qq"
                android:layout_marginLeft="@dimen/x10"
                />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
